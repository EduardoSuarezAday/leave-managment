@model leave_managment.Models.ViewAllocationVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Details for @Model.Employee.LastName, @Model.Employee.FirstName</h1>

<div>
    <h4>EmployeeVM</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.TaxId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.TaxId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.DateOfJoin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.DateOfJoin)
        </dd>
    </dl>
</div>

<hr />

<h2>Leave Allocations</h2>
<div class="card" style="width: 69rem;">
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.LeaveAllocations)
        {
         <li class="list-group-item">
             <h6>
                 @item.LeaveType.Name <span class="badge badge-secondary">@item.NumberOfDays</span>
                 &nbsp;&nbsp;
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                     <i class="fa fa-pencil"></i>
                 </a>
             </h6>
         </li>
        }

    </ul>
</div>

<div>
    <a asp-action="ListEmployees" class="btn btn-outline-primary btn-block">Back to List</a>
</div>
